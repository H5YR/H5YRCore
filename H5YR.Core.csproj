	  </Reference>
	  <Reference Include="Tweetinvi.Security">
	    <HintPath>bin\Debug\net472\Tweetinvi.Security.dll</HintPath>
	  </Reference>
	  <Reference Include="Tweetinvi.Streams">
	    <HintPath>bin\Debug\net472\Tweetinvi.Streams.dll</HintPath>
