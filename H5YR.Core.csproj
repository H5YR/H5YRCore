		<PackageReference Include="UmbracoCms.Web" Version="8.0.1" />
	</ItemGroup>

	<ItemGroup>
	  <Reference Include="System.Web" />
	  <Reference Include="Tweetinvi">
	    <HintPath>bin\Debug\net472\Tweetinvi.dll</HintPath>
	  </Reference>
	  <Reference Include="Tweetinvi.Controllers">
	    <HintPath>bin\Debug\net472\Tweetinvi.Controllers.dll</HintPath>
	  </Reference>
	  <Reference Include="Tweetinvi.Core">
	    <HintPath>bin\Debug\net472\Tweetinvi.Core.dll</HintPath>
	  </Reference>
	  <Reference Include="Tweetinvi.Credentials">
	    <HintPath>bin\Debug\net472\Tweetinvi.Credentials.dll</HintPath>
	  </Reference>
	  <Reference Include="Tweetinvi.Factories">
	    <HintPath>bin\Debug\net472\Tweetinvi.Factories.dll</HintPath>
	  </Reference>
	  <Reference Include="Tweetinvi.Logic">
